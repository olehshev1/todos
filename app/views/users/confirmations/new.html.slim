.login-box
  .login-logo
    / a href="../../index2.html"
    a href="/"
      b> Admin
      | LTE
  /! /.login-logo
  .card
    .card-body.login-card-body
      p.login-box-msg = t('devise.custom.confirmations.resend confirmation instructions')
